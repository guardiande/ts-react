{
    "compilerOptions": {
        "alwaysStrict": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*.tsx?",
        "src/index.tsx"
    ]
}
